<script>
  const updateAccountSettings = async (updatedData) => {
    try {
      const response = await fetch("/user/settings", {
        method: "PUT",
        headers: {
          "Content-Type": "application/json",
        },
        body: JSON.stringify(updatedData),
      });

      if (response.ok) {
       // const responseData = await response.json();
