      //  }
      } else {
        throw new Error("Failed to update account settings");
      }
    } catch (err) {
      console.error(err);
      // Handle error and display appropriate message
    }
  };

  const updateUserSettingsBtn = document.querySelector(
    "#updateUserSettingsBtn"
  );
