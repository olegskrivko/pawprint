<% layout('layouts/boilerplate')%>
<h1 class="text-center">Compare pets</h1>

<div class="row">
  <div class="col-md-12 mb-3">
    <div class="row row-cols-2 row-cols-sm-2 row-cols-md-2 g-3">
      <% for (let pet of pets) { %>

      <div class="col">
        <div class="card shadow-sm pet-card">
