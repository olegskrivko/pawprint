<%- include('./iconsSVG') %>

<header class="sticky-top text-body bg-body" data-bs-theme="dark">
  <div class="container">
    <nav class="navbar navbar-expand-lg flex-row-reverse">
      <div class="d-flex">
        <% if (!currentUser) { %>
        <!-- Define the behavior when user is not logged in -->
        <button type="button" onclick="location.href='/auth/login'" class="btn btn-sm btn-outline-light me-2">Log in</button>
        <button type="button" onclick="location.href='/auth/register'" class="btn btn-sm btn-warning">Sign up</button>
        <% } else { %>
        <!-- Define the behavior when user is logged in -->
        <p class="my-0 mx-3 d-flex" style="text-transform: capitalize">
          <a href="/auth/account/profile" class="me-2 mb-md-0 text-white text-decoration-none lh-1">
            <% if (currentUser.avatar.length > 0) { %>
            <img src="<%= currentUser.avatar[0].url %>" alt="mdo" width="32" height="32" class="rounded-circle me-2" style="box-shadow: 0 0 0 2px #cccccc; margin: -2px" />
            <% } else { %>
            <img src="/images/icons/user.png" alt="mdo" width="32" height="32" class="rounded-circle me-2" style="box-shadow: 0 0 0 2px #cccccc; margin: -2px" />
            <% } %> Hello, <%= currentUser.username %>!
          </a>
        </p>
        <a href="/auth/logout" class="me-2 mb-md-0 text-white text-decoration-none lh-1 d-flex align-items-center">
          <svg class="bi" width="30" height="24" fill="#ced4da">
            <use xlink:href="#bi-box-arrow-right"></use>
          </svg>
        </a>

        <% } %>
      </div>

      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav">
          <a class="nav-link" aria-current="page" href="/">Home</a>
          <a class="nav-link" href="/about">About</a>
          <a class="nav-link" href="/pets">Pets</a>
          <a class="nav-link" href="/services">Services</a>
        </div>
      </div>
    </nav>
  </div>
</header>
<script>
  // Get the current URL path
  var path = window.location.pathname;

  // Get all the navigation links
  var navLinks = document.querySelectorAll('.navbar-nav .nav-link');

  // Loop through each navigation link
  navLinks.forEach(function (link) {
    // Check if the link's href matches the current path
    if (link.getAttribute('href') === path) {
      // Add the active class to the matching link
      link.classList.add('active');
      //link.classList.add('text-decoration-underline');
    }
  });
</script>
