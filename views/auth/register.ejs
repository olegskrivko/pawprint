<main class="form-signin w-100 m-auto" style="max-width: 400px">
  <form action="/auth/register" method="POST" class="validated-form" novalidate>
    <!-- <img
        class="mb-4"
        src="/docs/5.3/assets/brand/bootstrap-logo.svg"
        alt=""
        width="72"
        height="57"
      /> -->
    <h1 class="h3 mb-3 fw-normal text-center">Please sign up</h1>

    <div class="form-floating mb-3">
      <input
        type="text"
        class="form-control"
        id="floatingUsername"
        name="username"
        placeholder="Username"
        required
        autofocus
      />
      <label for="floatingUsername">Username</label>
    </div>

    <div class="form-floating mb-3">
      <input
        type="email"
        class="form-control"
        id="floatingInput"
        name="email"
        placeholder="name@example.com"
        required
      />
      <label for="floatingEmail">Email address</label>
    </div>

    <div class="form-floating mb-3">
      <input
        type="password"
        class="form-control"
        id="floatingPassword"
        name="password"
        placeholder="Password"
        required
      />
      <label for="floatingPassword">Password</label>
    </div>

    <p class="text-muted small mb-3">
      By creating an account, you agree to our
      <span
        class="gdpr"
        data-bs-toggle="modal"
        data-bs-target="#staticBackdrop-privacypolicy"
        >Privacy Policy</span
      >
      and
      <span
        class="gdpr"
        data-bs-toggle="modal"
        data-bs-target="#staticBackdrop-termsandconditions"
      >
        Terms & Conditions</span
      >.
    </p>

    <button class="w-100 btn btn-lg btn-primary" type="submit">Sign up</button>
    <p class="mt-2 small text-center mb-3 text-muted">
      Already have an account? <a href="/auth/login">Log in</a>
    </p>
  </form>
</main>

