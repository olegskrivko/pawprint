<% layout('layouts/boilerplate')%>

<main class="form-signin w-100 m-auto" style="max-width: 400px">
  <form action="/auth/login" method="POST" class="validated-form" novalidate>
    <!-- Login Form -->
    <h1 class="h3 mb-3 fw-normal text-center"><%= loginPage.titles.pleaseLogIn %></h1>

    <!-- Username Field -->
    <div class="form-floating mb-3">
      <input type="text" class="form-control" id="floatingUsername" name="username" placeholder="Username" required autofocus />
      <label for="floatingUsername"><%= loginPage.labels.username %></label>
    </div>

    <!-- Password Field -->
    <div class="form-floating mb-3">
      <input type="password" class="form-control" id="floatingPassword" name="password" placeholder="Password" required />
      <label for="floatingPassword"><%= loginPage.labels.password %></label>
    </div>

    <!-- Log in Button -->
    <button class="w-100 btn btn-lg btn-primary" type="submit"><%= loginPage.buttons.logIn %></button>

    <!-- Sign up Link -->
    <p class="mt-2 small text-center mb-3 text-muted"><%= loginPage.descriptions.dontHaveAccount %> <a href="/auth/register"><%= loginPage.links.signUp %></a></p>
  </form>
</main>
