<% layout('layouts/boilerplate')%>

<main class="w-100 m-auto" style="max-width: 600px">
  <div class="icon d-flex justify-content-center">
    <span>
      <svg class="bi" width="180" height="144" fill="#6F7174">
        <use xlink:href="#catlogo"></use>
      </svg>
    </span>
  </div>
  <div class="py-3 my-2 text-center">
    <h1 class="display-5 fw-bold">Welcome to <span class="text-warning">PawPrint</span></h1>
  </div>

  <div class="d-grid gap-2 d-sm-flex justify-content-sm-center mb-5" style="text-align: justify">Find your furry friend with PawPrint. Try it today, no matter where you are.</div>

  <% if(!currentUser) { %>
  <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
    <button type="button" onClick="location.href='/auth/login'" class="btn btn-primary btn-lg px-4 gap-3">Log in</button>
    <button type="button" onClick="location.href='/auth/register'" class="btn btn-outline-secondary btn-lg px-4">Sign up</button>
  </div>
  <% } else if (currentUser) {%>
  <div class="d-flex justify-content-center">
    <button type="button" onClick="location.href='/pets'" class="btn btn-warning btn-lg px-4">Find a Pet</button>
  </div>
  <% } %>
</main>
