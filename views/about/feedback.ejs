<% layout('layouts/boilerplate')%>
<h1 class="text-center mb-4">Feedback</h1>
<h3 class="text-center mb-4 text-muted">Page under construction <i class="bi bi-gear-fill"></i></h3>
<main class="m-auto custom-feedback-container">
  <form class="needs-validation" novalidate="">
    <div class="row g-3 mb-3">
      <div class="col-6">
        <label for="firstName" class="form-label">First name</label>
        <input type="text" class="form-control" id="firstName" placeholder="" value="" required="" />
        <div class="invalid-feedback">Valid first name is required.</div>
      </div>

      <div class="col-6">
        <label for="lastName" class="form-label">Last name</label>
        <input type="text" class="form-control" id="lastName" placeholder="" value="" required="" />
        <div class="invalid-feedback">Valid last name is required.</div>
      </div>

      <div class="col-4">
        <label for="country" class="form-label">Subject</label>
        <select class="form-select" id="country" required="">
          <option value="">Choose...</option>
          <option>Bug</option>
          <option>Support</option>
          <option>Other</option>
        </select>
        <div class="invalid-feedback">Please select a subject.</div>
      </div>

      <div class="col-8">
        <label for="email" class="form-label">Email</label>
        <input type="email" class="form-control" id="email" placeholder="you@example.com" />
        <div class="invalid-feedback">Please enter a valid email address.</div>
      </div>

      <div class="col-12">
        <textarea class="form-control" aria-label="With textarea"></textarea>
      </div>
    </div>

    <button class="w-100 btn btn-primary btn-lg" type="submit">Send</button>
  </form>
</main>
